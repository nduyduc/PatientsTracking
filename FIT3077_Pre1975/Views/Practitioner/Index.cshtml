@model FIT3077_Pre1975.Models.Practitioner;

@{
    ViewData["Title"] = "Practitioner Detail";
}

  @*<summary>
          Practitioner Detail View
    </summary>*@
<div>
    <h4>Practitioner Detail</h4>
    <hr />

    @*Generate view elements with data from Model*@
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>

        @if (Model != null && Model.Address != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address.Text)
            </dd>
        }

        @if (Model != null && Model.BirthDate != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BirthDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BirthDate)
            </dd>
        }
    </dl>
    <hr />

    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Login", "Practitioner")'">Change Practitioner</button>
</div>
